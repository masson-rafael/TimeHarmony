{% extends 'base_template.html.twig' %}

{% block title %}reinitialise - {{ constant('WEBSITE_TITLE') }}{% endblock %}

{% block content %}

{% if reinitialise == true %}
<main>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center mb-4">Entrez une adresse mail valide</h3>
            <div class="d-flex align-items-center">
                <!-- Formulaire -->
                <div class="flex-grow-1">
                    <form method="POST" action="index.php?controleur=utilisateur&methode=demandeReinitialisation">
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">E-mail</label>
                            <input type="email" name="email" class="form-control" aria-describedby="emailHelp" required maxlength="255" minlength="5" title="Entrez l'adresse email qui sera liée au compte">
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Envoyer un mail de récupération</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center mb-4">Réinitialiser mon mot de passe</h3>
            <div class="d-flex align-items-center">
                <!-- Formulaire -->
                <div class="flex-grow-1">
                    <form method="POST" action="index.php?controleur=utilisateur&methode=reinitialiserMotDePasse&email={{ email }}">
                        <div class="mb-3">
                            <label for="nom" class="form-label">Nouveau mot de passe</label>
                            <input 
                                type="password" 
                                name="pwd" 
                                class="form-control" 
                                id="exampleInputPassword1" 
                                required 
                                minlength="8" 
                                maxlength="25" 
                                pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*\W)[a-zA-Z\d\W]{8,25}$" 
                                title="Le mot de passe doit contenir au moins : une lettre minuscule, une majuscule, un chiffre et un caractère spécial, et être compris entre 8 et 25 caractères."
                            >
                        </div>
                        <div class="mb-3">
                            <label for="prenom" class="form-label">Confirmer le nouveau mot de passe</label>
                            <input 
                                type="password" 
                                name="pwdConfirme" 
                                class="form-control" 
                                id="exampleInputPassword1" 
                                required 
                                minlength="8" 
                                maxlength="25" 
                                pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*\W)[a-zA-Z\d\W]{8,25}$" 
                                title="Le mot de passe doit contenir au moins : une lettre minuscule, une majuscule, un chiffre et un caractère spécial, et être compris entre 8 et 25 caractères."
                            >
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Réinitialiser le mot de passe</button>
                        </div>
                    </form>
                    {% if message %}
                        <div class="mt-5">
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                {% for messages in message %}
                                {{messages}} <br>
                                {% endfor %}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
</div>
</main>
{% endif %}
{% endblock %}