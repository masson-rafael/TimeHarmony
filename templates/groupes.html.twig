{% extends 'base_template.html.twig' %}

{% block title %}Groupes -
	{{ constant('WEBSITE_TITLE')}}
{% endblock %}

{% block content %}
	<main>
	<div class="container">
        <div class="row text-center mt-3 mb-3">
            <h1>Vos Groupes</h1>
        </div>
        <table id="myTable" class="table table-striped">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Membres</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for groupe in groupes %}
                    <tr>
                        <td>{{ groupe.nom }}</td>
                        <td>{{ groupe.description }}</td>
                        <td>erreur</td>
                        <td>
                        <a role="button" href="#" data-bs-toggle="modal" data-bs-target="#fenetreModaleModification{{ groupe.id }}">
                        <i class="fa-solid fa-pencil"></i></a>
                        <a role="button" href="#" data-bs-toggle="modal" data-bs-target="#fenetreModaleSuppression{{ groupe.id }}">
                        <i class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>

                    <div class="modal fade" id="fenetreModaleModification{{groupe.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Modification du groupe
                                        {{groupe.nom}}
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form action="index.php?controleur=groupes&methode=modifier&id={{ groupe.id }}" method="POST" enctype="multipart/form-data">
                                    <div class="modal-body">
                                        <label>Êtes-vous sûr de vouloir modifier le groupe
                                            {{groupe.nom}}
                                            ?</label>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary" name="update_article">Modifier</button>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade" id="fenetreModaleSuppression{{groupe.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Suppression du groupe
                                        {{groupe.nom}}
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form action="index.php?controleur=groupes&methode=supprimer&id={{ groupe.id }}" method="POST" enctype="multipart/form-data">
                                    <div class="modal-body">
                                        <label>Êtes-vous sûr de vouloir supprimer le groupe
                                            {{groupe.nom}}
                                            ?</label>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary" name="update_article">Supprimer</button>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </tbody>
        </table>
        <div class="text-center">
            <a class="px-5 btn btn-primary" href="index.php?controleur=groupes&methode=ajouter" role="button">Créer un groupe</a>
        </div>
    {% if message %}
        <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
            {% for messages in message %}
                {{messages}}
                <br>
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endif %}
	</div>
	</main>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#myTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/fr-FR.json'
                },
                responsive: true, // Important pour les petits écrans
                autoWidth: false, // Évite les problèmes de calcul automatique de largeur
                pageLength: 10,
                ordering: true
            });
        });
    </script>
{% endblock %}
